{
  "name": "hydra-translate-js",
  "version": "1.0.0",
  "description": "Lightweight DOM phrase extractor",
  "author": "wake",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist --clean",
    "build:iife": "tsup src/index.ts --format iife --globalName=Hydra --out-dir dist/iife",
    "dev": "tsup src/index.ts --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hydraworkspace/hydra_translate_js.git"
  },
  "keywords": [
    "i18n",
    "translation",
    "javascript",
    "typescript",
    "spa",
    "localize",
    "hydra"
  ],
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "bugs": {
    "url": "https://github.com/hydraworkspace/hydra_translate_js/issues"
  },
  "homepage": "https://github.com/hydraworkspace/hydra_translate_js#readme",
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.0"
  }
}
